<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="60dp"
        android:clipToPadding="false"
        android:paddingEnd="60dp"
        android:paddingStart="15dp">

    <View
            android:id="@+id/avatar"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            android:background="@drawable/user_avatar_bubble"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true" />

    <TextView
            android:id="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="TestUserName"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/avatar" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/their_message_body"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:background="@drawable/their_message_drawable"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:textSize="18sp"
            android:text="Test message lol"
            android:layout_alignStart="@+id/name" />

    <TextView
            android:id="@+id/their_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/their_message_body"
            android:layout_alignParentLeft="true"
            android:text=""
            android:layout_alignParentStart="true" />
</RelativeLayout>